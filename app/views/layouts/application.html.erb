<!DOCTYPE html>
<html>
  <head>
    <title>SoundShroud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://unpkg.com/wavesurfer.js"></script>
    
    <%= favicon_link_tag asset_path('soundshroud_favicon.png') %>
    <script type="text/javascript">window.camera = "<%= image_url("camera.png") %>"</script>
    <script type="text/javascript">window.pencil = "<%= image_url("pencil.png") %>"</script>
    <script type="text/javascript">window.trashcan = "<%= image_url("trashcan.png") %>"</script>
    <script type="text/javascript">window.logo = "<%= image_url("soundshroud_logo.png") %>"</script>
    <script type="text/javascript">window.loading_icon = "<%= image_url("loading-icon.svg") %>"</script>
    <script type="text/javascript">window.loading_icon2 = "<%= image_url("loading-icon2.svg") %>"</script>
    <script type="text/javascript">window.play_btn = "<%= image_url("play.png") %>"</script>
    <script type="text/javascript">window.pause_btn = "<%= image_url("pause.png") %>"</script>
    <script type="text/javascript">window.skip_btn = "<%= image_url("skip.png") %>"</script>
    <script type="text/javascript">window.loop_btn = "<%= image_url("loop.png") %>"</script>
    <script type="text/javascript">window.loop_selected_btn = "<%= image_url("loop_selected.png") %>"</script>
    <script type="text/javascript">window.rewind_btn = "<%= image_url("rewind.png") %>"</script>
    <script type="text/javascript">window.speaker_btn = "<%= image_url("speaker.png") %>"</script>
    <script type="text/javascript">window.muted_speaker_btn = "<%= image_url("muted_speaker.png") %>"</script>

    <script type="text/javascript">window.charli_xcx = "<%= image_url("carolinecharli.jpg") %>"</script>
    <script type="text/javascript">window.oneohtrix = "<%= image_url("oneohtrix.jpg") %>"</script>
    <script type="text/javascript">window.bjork = "<%= image_url("bjork.jpg") %>"</script>
  </head>

  <body>
      <%= yield %>
  </body>
</html>
